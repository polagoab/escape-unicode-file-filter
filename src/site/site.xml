<project name="${project.artifactId}">
  <bannerLeft>
    <name>${project.organization.name}</name>
    <src>images/polago-logo.png</src>
    <href>http://www.polago.org/</href>
  </bannerLeft>

  <skin>
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.1.1</version>
  </skin>

  <publishDate position="bottom" format="yyyy-MM-dd" />
  <version position="bottom" />

  <custom>
    <reflowSkin>
      <brand>
        <name>${project.name}</name>
        <href>${project.url}</href>
      </brand>
      <bottomNav>
        <column>Overview</column>
        <column>reports</column>
      </bottomNav>
      <titleTemplate>${project.name} - %2$s</titleTemplate>
      <skinAttribution>false</skinAttribution>
    </reflowSkin>
  </custom>

  <body>
    <head>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-8548760-13', 'auto');
        ga('send', 'pageview');
      </script>
    </head>

    <breadcrumbs>
      <item name="Polago Open Source" href="http://www.polago.org/" />
      <item name="${project.name}" href="http://www.polago.org/${project.artifactId}" />
    </breadcrumbs>

    <menu name="Overview">
      <item name="Introduction" href="index.html" />
      <item name="Usage" href="usage.html" />
      <item name="Polago.com" href="${organization.url}"/>
      <item name="${issueManagement.system}" href="${issueManagement.url}"/>
      <item name="${ciManagement.system}" href="${ciManagement.url}"/>
    </menu>

    <menu ref="reports" />
  </body>
</project>
